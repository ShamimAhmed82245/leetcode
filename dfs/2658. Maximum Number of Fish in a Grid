class Solution {
public:

    int n;
    int m;

    int dfs(vector<vector<int>>& grid,int r,int c)
    {
        if(r<0||c<0||r>=n||c>=m||grid[r][c]==0)
        return 0;
        int tot=grid[r][c];
        grid[r][c]=0;
        tot+=dfs(grid,r,c-1);
        tot+=dfs(grid,r,c+1);
        tot+=dfs(grid,r+1,c);
        tot+=dfs(grid,r-1,c);
        return tot;
    }

    int findMaxFish(vector<vector<int>>& grid) {
        n=grid.size();
        m=grid[0].size();

        int ans=0;
        
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<m;j++)
            {
               if(grid[i][j]>0){
                    ans=max(ans,dfs(grid,i,j));
               }
            }
        }
        return ans;
    }
};
